{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build cpp",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "bear",
        "--",
        "g++",
        "-std=c++20",
        "-g",
        "$(find src -name '*.cpp')",
        "-o" ,
        "main",
        "-lSDL3",
        "-lSDL3_ttf",
        "-lSDL3_image"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
